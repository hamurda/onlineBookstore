@model Category
@{
    ViewBag.Title = "Insert";
}

<h2>Insert</h2>
<hr />

@using (Html.BeginForm("Insert", "Category", FormMethod.Post))
{
    <div class="form-group">
        <label for="Name">Name:</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="CatogorySubCategoryOf">Main Category:</label>
        @Html.DropDownListFor(m => m.SubCategoryOf, (SelectList)ViewBag.ID, "Main Category", htmlAttributes: new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Save</button>
    @Html.ActionLink("Cancel", "Index", "Category", new { @class = "btn btn-default" })

    if (ViewBag.Message != null)
    {
        <div class="alert alert-primary" role="alert">
            @ViewBag.Message
        </div>
    }
}

