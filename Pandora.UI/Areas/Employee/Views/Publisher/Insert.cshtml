@model PublisherAddressVM

@{
    ViewBag.Title = "Insert";
}

<h2>Insert</h2>
<hr />

@using (Html.BeginForm("Insert", "Publisher", FormMethod.Post))
{
    <div class="form-row">
        <div class="from-group col-md-4">
            <div class="form-group">
                <label for="FirstName">Company Name:</label>
                @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="LastName">Contact Name:</label>
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="LastName">Contact Title:</label>
                @Html.DropDownList("ContactTitle", EnumHelper.GetSelectList(typeof(ContactTitle)), "Contact Title", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="EmailAddress">Email Address:</label>
                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Phone">Phone Number:</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-default">Save</button>
            @Html.ActionLink("Cancel", "Index", "Publisher", new { @class = "btn btn-default" })

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-primary" role="alert">
                    @ViewBag.Message
                </div>
            }
    </div>
        <div class="from-group col-md-6">
            <div class="form-group">
                <label for="Street">Street Name:</label>
                @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="PostalCode">Postal Code:</label>
                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="LastName">City:</label>
                @Html.DropDownListFor(m => m.CityID, (SelectList)ViewBag.CityID, "CityName", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="LastName">Country:</label>
                @Html.DropDownListFor(m => m.CountryID, (SelectList)ViewBag.CountryID, "CountryName", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
    </div>
}


