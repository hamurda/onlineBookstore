@model Shipper
@{

    ViewBag.Title = "Shipper Update";
}

<h2>Shipper Update</h2>
<hr />

@using (Html.BeginForm("Update", "Shipper", FormMethod.Post))
{
    <div class="form-group">
        <label for="Name">Company Name:</label>
        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Name">Contact Name:</label>
        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Name">Phone:</label>
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Save</button>
    @Html.ActionLink("Cancel", "Index", "Shipper", new { @class = "btn btn-default" })

    if (ViewBag.Message != null)
    {
        <div class="alert alert-primary" role="alert">
            @ViewBag.Message
        </div>
    }
}






