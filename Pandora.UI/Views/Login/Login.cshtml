@model Customer

@{
    ViewBag.Title = "Login";
}

<!-- v30-->
<!-- Inner Page Banner Area Start Here -->
<div class="inner-page-banner-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcrumb-area">
                    <h1>Welcome to Pandora</h1>
                    <ul>
                        <li><a href="@Url.Action("Index","Home")">Home</a> /</li>
                        <li></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Inner Page Banner Area End Here -->
<!-- Login Registration Page Area Start Here -->
<div class="login-registration-page-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="login-registration-field">
                    <h2 class="cart-area-title">Login</h2>
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        <label>Email address *</label>
                        @Html.TextBoxFor(m => m.EmailAddress, new { @type = "text", @placeholder = "E-mail" })
                        <label>Password *</label>
                        @Html.TextBoxFor(m => m.Password, new { @type = "password", @placeholder = "Password" })
                        <label class="check">Lost your password?</label>
                        <button class="btn-send-message disabled" type="submit" value="Login">Login</button>
                        <span><input type="checkbox" name="remember" />Remember Me</span>

                        if (TempData["login"] != null)
                        {
                            <div class="alert alert-info">
                                <strong>@TempData["login"]</strong>
                            </div>
                        }

                    }
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                <div class="login-registration-field">
                    <h2 class="cart-area-title">Register</h2>
                    @using (Html.BeginForm("Register", "Login", FormMethod.Post))
                    {
                        <label>User Name *</label>
                        @Html.TextBoxFor(m => m.Username, new { @type = "text", @placeholder = "Username" })
                        <label>First Name *</label>
                        @Html.TextBoxFor(m => m.FirstName, new { @type = "text", @placeholder = "First Name" })
                        <label>Last Name *</label>
                        @Html.TextBoxFor(m => m.LastName, new { @type = "text", @placeholder = "Last Name" })
                        <label>Gender *</label>
                        @Html.DropDownList("Gender", EnumHelper.GetSelectList(typeof(Gender)), "Gender", new { @class = "form-control" })
                        <label>Email address *</label>
                        @Html.TextBoxFor(m => m.EmailAddress, new { @type = "text", @placeholder = "E-mail" })
                        <label>Password *</label>
                        @Html.TextBoxFor(m => m.Password, new { @type = "password", @placeholder = "Password" })
                        <button class="btn-send-message disabled" type="submit" value="Login">Register</button>

                        if (TempData["new"] != null)
                        {
                            <div class="alert alert-info">
                                <strong>@TempData["new"]</strong>
                            </div>
                        }

                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login Registration Page Area End Here -->
